{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist/*.js"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": {
					"level": "off"
				},
				"noUselessElse": {
					"level": "off"
				},
				"useNodejsImportProtocol": {
					"level": "off"
				},
				"useImportType": {
					"level": "off"
				},
				"noParameterAssign": {
					"level": "off"
				}
			}
		}
	}
}
